@model IEnumerable<Mills_4800.Models.Registration>

@{
    ViewBag.Title = "Registration Information";
}

<h2>Registration Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.classTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.firstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.classTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.firstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.registrationID }) |
                @Html.ActionLink("Details", "Details", new { id = item.registrationID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.registrationID })
            </td>
        </tr>
    }

</table>
